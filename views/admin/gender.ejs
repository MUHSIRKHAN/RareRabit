<%- include('partials/adminheader.ejs') %> 

<div class="container-scroller">
  <%- include('partials/siderbar1.ejs') %> 
  <div class="container-fluid page-body-wrapper">
  <%- include('partials/siber2.ejs') %> 
  <div class="main-panel">
    <div class="content-wrapper">
      <div class="page-header">
        <h3 class="page-title">GENDER</h3>
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#"></a></li>
            <li class="breadcrumb-item active" aria-current="page"></li>
          </ol>
        </nav>
      </div>
      <div class="row">
        
              <h4 class="card-title">MEN/WOMEN</h4>
              <p class="card-description"> Gender category <code></code>
              </p>
              <div class="table-responsive">
                <table class="table">
                  <thead>
                    <tr>
                      <th>NO</th>
                      <th>GENDER CATEGORY</th>
                      <th>IMAGE</th>
                      <th>ACTION</th>
                    </tr>
                  </thead>
                  <tbody>
                    
                      <% for( let i = 0; i < gender.length; i++ ) { %>
                        <tr>
                        <td><%=i+1  %> </td>
                      <td><%=gender[i].gender  %> </td>
                      <td><img src="/product-images/<%= gender[i].image[0]%>Gender.imagesDetails " width="100" height="150" alt=""></td>

                    
                      <td><button type="submit" class="btn btn-primary mr-2">edit</button>
                        <a href="/admin/deleteGender/<%=gender[i]._id %>" class="btn btn-primary mr-2">delete</a></td>
                    </tr>
                      <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>

        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
            ADD CATEGORY
          </button>
        </div>
      </div>
          <!-- Modal -->
          <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">Add category</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                    <div class="main-panel">
                        <div class="content-wrapper">
                          <div class="page-header">
                            
                            <nav aria-label="breadcrumb">
                              <ol class="breadcrumb">
                                
                              </ol>
                            </nav>
                          </div>
                          <div class="row">
                            <div class="col-md-6 grid-margin stretch-card">
                              <div class="card">
                                <div class="card-body">
                                  <h4 class="card-title">Add category</h4>
                                  
                                  <form class="forms-sample" action="/admin/genderType" method="post" enctype="multipart/form-data">
                                    <div class="form-group">
                                      <label for="exampleSelectGender">Gender</label>
                                      <select class="form-control" name="gender" id="exampleSelectGender">
                                      <option>male</option>
                                      <option>female</option>
                                      </select>
                                        
                                      
                                    </div>
                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <input type="file" name="image" class="form-control"  multiple>
                                            <label class="input-group-text" for="inputGroupFile02"></label>
                                          </div>
                                          <button type="submit" class="btn btn-primary mr-2">
                                            Submit
                                          </button>
                                          <button class="btn btn-dark">Cancel</button>
                                          
                                    </div>
                
                </div>
              </div>
              </div>
            </div>
          </div>
          </div>
          </div>
          </div>
          </div>
          </div>
  </div>
  </div>


