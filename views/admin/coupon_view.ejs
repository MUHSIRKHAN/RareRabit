                  <button class="btn-danger btn-sm" onclick="blockCoupon('<%=coupons[i]._id%>')" >Deactivate</button> 
                   <% } else { %>
                  <button class="btn-success btn-sm" >Activate</button>
                  <% } %>
                </td>
                    </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
        
