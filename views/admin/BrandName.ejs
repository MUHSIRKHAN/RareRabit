                    <p class="card-description"></p>
                    <form action="/admin/addBrand" class="forms-sample" method="post">
                      <div class="form-group">
                        <label for="exampleInputUsername1">Add brand</label>
                        <input
                          type="text"
                          name="brandName"
                          class="form-control"
                          id="exampleInputUsername1"
                          placeholder="BRANDNAME"
                        />
                      </div>
                      
